{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "include": ["src", "test"]
}
